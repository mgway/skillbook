<div class="uk-width-1-1 uk-hidden-small">
    <img class="uk-comment-avatar" src="https://image.eveonline.com/Character/{{characterid}}_128.jpg" alt={{name}} />
    <dl class="uk-description-list uk-description-list-horizontal">
        <dt>Bio</dt><dd>{{bio}}</dd>
        <dt>Balance</dt><dd>{{commas balance}} ISK</dd>
        <dt>Birthday</dt><dd>{{formatTime birthday}}</dd>
        <dt>Corporation</dt><dd>{{corporationname}}</dd>
        <dt>Skillpoints</dt><dd id="skillpoints">{{commas skillpoints}}</dd>
        <dt>Clone</dt><dd>{{commas clonesp}} ({{clonegrade}})</dd>
    </dl>
</div>